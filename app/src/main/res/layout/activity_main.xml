<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="0"
        android:id="@+id/txtCalculations"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edtNumber"
        android:paddingTop="30dp"
        android:hint="0"
        />
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TableRow
            android:layout_height="match_parent"
            android:layout_width="match_parent">

            <Button
                android:layout_width="0dp"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:onClick="buttonTapped"
                android:text="Button"
                android:visibility="invisible" />

            <Button
                android:layout_width="0dp"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:onClick="buttonTapped"
                android:text="Button"
                android:visibility="invisible" />

            <Button
                android:layout_width="0dp"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:onClick="buttonTapped"
                android:text="Button"
                android:visibility="invisible" />

            <Button
                android:id="@+id/btnDivide"
                android:layout_width="0dp"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:onClick="buttonTapped"
                android:text="/" />
        </TableRow>
        <TableRow
            android:layout_height="match_parent"
            android:layout_width="match_parent">

            <Button
                android:id="@+id/btn7"
                android:layout_width="0dp"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:onClick="buttonTapped"
                android:text="7" />

            <Button
                android:id="@+id/btn8"
                android:layout_width="0dp"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:onClick="buttonTapped"
                android:text="8" />

            <Button
                android:id="@+id/btn9"
                android:layout_width="0dp"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:onClick="buttonTapped"
                android:text="9" />

            <Button
                android:id="@+id/btnMultiply"
                android:layout_width="0dp"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:onClick="buttonTapped"
                android:text="x" />
        </TableRow>
        <TableRow
            android:layout_height="match_parent"
            android:layout_width="match_parent">

            <Button
                android:id="@+id/btn4"
                android:layout_width="0dp"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:onClick="buttonTapped"
                android:text="4" />

            <Button
                android:id="@+id/btn5"
                android:layout_width="0dp"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:onClick="buttonTapped"
                android:text="5" />

            <Button
                android:id="@+id/btn6"
                android:layout_width="0dp"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:onClick="buttonTapped"
                android:text="6" />

            <Button
                android:id="@+id/btnMinus"
                android:layout_width="0dp"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:onClick="buttonTapped"
                android:text="-" />
        </TableRow>
        <TableRow
            android:layout_height="match_parent"
            android:layout_width="match_parent">

            <Button
                android:id="@+id/btn1"
                android:layout_width="0dp"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:onClick="buttonTapped"
                android:text="1" />

            <Button
                android:id="@+id/btn2"
                android:layout_width="0dp"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:onClick="buttonTapped"
                android:text="2" />

            <Button
                android:id="@+id/btn3"
                android:layout_width="0dp"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:onClick="buttonTapped"
                android:text="3" />

            <Button
                android:id="@+id/btnPlus"
                android:layout_width="0dp"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:onClick="buttonTapped"
                android:text="+" />
        </TableRow>
    </TableLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <Button
            android:id="@+id/btn0"
            android:layout_width="0dp"
            android:layout_height="30pt"
            android:layout_weight="1"
            android:onClick="buttonTapped"
            android:text="0" />

        <Button
            android:id="@+id/btnClear"
            android:layout_width="0dp"
            android:layout_height="30pt"
            android:layout_weight="1"
            android:onClick="buttonTapped"
            android:text="C" />

        <Button
            android:id="@+id/btnPercent"
            android:layout_width="0dp"
            android:layout_height="30pt"
            android:layout_weight="1"
            android:onClick="buttonTapped"
            android:text="%" />

        <Button
            android:id="@+id/btnEqual"
            android:layout_width="0dp"
            android:layout_height="30pt"
            android:layout_weight="1"
            android:onClick="buttonTapped"
            android:text="=" />

    </LinearLayout>


</LinearLayout>